<%- include('../port/layout-start', {title: title}) %>
<%- include('../port/menu') %>

<div class="title-box"><h1 class="title"><%= title %></h1></div>
<div class="btn-box"><a class="btn" href="/books/create">Добавить книгу</a></div>

<% if (arrBooks.length) { %>
  <table class="table">
    <thead class="table-header">
      <tr>
        <td>№</td>
        <td>Название</td>
        <td></td>
      </tr>
    </thead>
    <tbody class="table-body">
  
      <% arrBooks.map((el, idx) => { %>
        <tr class="table-item">
          <td><%= idx +1 %></td>
          <td><%= el.title %></td>
          <td>
            <div class="icon-line">
              <a class="btn-i eye" href="/books/<%= el.id %>"><i class="fa-solid fa-eye"></i></a>
              <a class="btn-i pencil" href="/books/update/<%= el.id %>"><i class="fa-solid fa-pencil"></i></a>
              <form action="/books/delete/<%= el.id %>" method="post" class="f-inline">
                <button class="btn-i trash"><i class="fa-solid fa-trash-can"></i></button>
              </form>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

<% } else { %>
  <div class="message">Архив книг пуст</div>    
<% } %>

<%- include('../port/layout-end') %>